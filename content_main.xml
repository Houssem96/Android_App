<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffccff"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:background="@drawable/shopping"
                android:gravity="center_vertical"
                android:text="Home"
                android:textAlignment="center"
                android:textSize="70dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#00CED1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/Vehicule"
                        android:layout_width="67dp"
                        android:layout_height="44dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:clickable="true"
                        android:onClick="vehicule"
                        android:src="@drawable/vehi_24dp"
                        android:tint="#FFFF" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="#00fbff"
                        android:padding="8dp"
                        android:text="Vehicules"
                        android:textAlignment="center"
                        android:textSize="16sp"

                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#008B8B"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="83dp"
                        android:layout_height="44dp"
                        android:clickable="true"
                        android:layout_gravity="center"
                        android:onClick="buildings"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/appliances_24dp"
                        android:tint="#FFFF" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="#00b3b3"
                        android:padding="8dp"
                        android:text="Buildings"
                        android:textAlignment="center"
                        android:textSize="16sp"

                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#004d4d	"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="71dp"
                        android:clickable="true"
                        android:layout_height="44dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:onClick="homeappliances"
                        android:src="@drawable/buildings_24dp"
                        android:tint="#FFFF" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:background="#00b3b3"
                        android:padding="8dp"
                        android:text="Home Appliances"
                        android:textAlignment="center"
                        android:textSize="13sp"

                        />


                </LinearLayout>

            </LinearLayout>


            <!--  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#00d169"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="67dp"
                        android:layout_height="44dp"
                        android:clickable="true"
                        android:layout_gravity="center"
                        android:onClick="leisures"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/leisures_24dp"
                        android:tint="#FFFF" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="#00fbff"
                        android:padding="8dp"
                        android:text="Leisures"
                        android:textAlignment="center"
                        android:textSize="16sp"

                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#008040"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="83dp"
                        android:layout_height="44dp"
                        android:clickable="true"
                        android:layout_gravity="center"
                        android:onClick="multimedia"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/multimedia_24dp"
                        android:tint="#FFFF" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="#00b3b3"
                        android:padding="8dp"
                        android:text="Multimedia"
                        android:textAlignment="center"
                        android:textSize="16sp"

                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#00331a	"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="71dp"
                        android:layout_height="44dp"
                        android:clickable="true"
                        android:layout_gravity="center"
                        android:onClick="other"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/other_24dp"
                        android:tint="#FFFF" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="47dp"
                        android:layout_marginTop="20dp"
                        android:background="#00b3b3"
                        android:padding="8dp"
                        android:text="Other"
                        android:textAlignment="center"
                        android:textSize="13sp"

                        />


                </LinearLayout>


            </LinearLayout>
            <!-- -->
            -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">



                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#ffccff"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="67dp"
                        android:layout_height="44dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:tint="#FFFF" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="#d1d1e0"
                        android:padding="8dp"
                        android:text="Â© WantIt 2019 | Langue : Anglais "
                        android:textAlignment="center"
                        android:textSize="16sp"

                        />


                </LinearLayout>







            </LinearLayout>


        </LinearLayout>


    </ScrollView>




</LinearLayout>